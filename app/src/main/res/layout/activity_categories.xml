<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.error404.news.MainActivity"
    android:background="@color/colorBackground">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/Table"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:weightSum="100">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_weight="35"
                    android:weightSum="100">

                    <FrameLayout
                        android:id="@+id/corona"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="100">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="175dp"
                            android:background="@android:color/transparent">

                            <ImageView
                                android:id="@+id/imageView8"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/corona_foreground" />

                            <ImageView
                                android:id="@+id/imageView9"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="0dp"
                                app:srcCompat="@drawable/bottom_shadow" />

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_above="@+id/textView9"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="2dp"
                                android:text="Check Latest"
                                android:textColor="#FFFFFF" />

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="10dp"
                                android:text="COVID-19 Updates"
                                android:textColor="#FFFFFF" />

                        </RelativeLayout>

                    </FrameLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_weight="35"
                    android:weightSum="100">

                    <FrameLayout
                        android:id="@+id/health"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="50">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/category_bg">

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imageView2"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="0dp"
                                android:text="Health"
                                android:textColor="#000000" />

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                app:srcCompat="@drawable/health_foreground" />

                        </RelativeLayout>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/sports"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="50">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/category_bg">

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imageView3"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="0dp"
                                android:text="Sports"
                                android:textColor="#000000" />

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                app:srcCompat="@drawable/sports_foreground" />

                        </RelativeLayout>

                    </FrameLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_weight="35"
                    android:weightSum="100">

                    <FrameLayout
                        android:id="@+id/technology"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="50">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/category_bg">

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imageView4"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="0dp"
                                android:text="Technology"
                                android:textColor="#000000" />

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                app:srcCompat="@drawable/technology_foreground" />

                        </RelativeLayout>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/science"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="50">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/category_bg">

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imageView5"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="0dp"
                                android:text="Science"
                                android:textColor="#000000" />

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                app:srcCompat="@drawable/science_foreground" />

                        </RelativeLayout>

                    </FrameLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_weight="35"
                    android:weightSum="100">

                    <FrameLayout
                        android:id="@+id/entertainment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="50">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/category_bg">

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imageView6"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="0dp"
                                android:text="Entertainment"
                                android:textColor="#000000" />

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="60dp"
                                android:layout_height="107dp"
                                android:layout_centerHorizontal="true"
                                app:srcCompat="@drawable/entertainment_foreground" />

                        </RelativeLayout>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/business"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="50">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/category_bg">

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imageView7"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="0dp"
                                android:text="Business"
                                android:textColor="#000000" />

                            <ImageView
                                android:id="@+id/imageView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                app:srcCompat="@drawable/buisness_foreground" />

                        </RelativeLayout>

                    </FrameLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_weight="35"
                    android:weightSum="100">

                    <FrameLayout
                        android:id="@+id/education"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="50">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/category_bg">

                            <TextView
                                android:id="@+id/textView19"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imageView16"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="0dp"
                                android:text="Education"
                                android:textColor="#000000" />

                            <ImageView
                                android:id="@+id/imageView16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                app:srcCompat="@drawable/education_foreground" />

                        </RelativeLayout>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/wrong"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_weight="50">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@android:color/transparent">

                            <TextView
                                android:id="@+id/textView17"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imageView17"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="0dp"
                                android:text="Business"
                                android:textColor="#00000000" />

                            <ImageView
                                android:id="@+id/imageView17"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true" />

                        </RelativeLayout>

                    </FrameLayout>

                </TableRow>

            </TableLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/bottomBar"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom">

        <android.support.design.widget.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/nav_view_bar"
            android:background="@drawable/white_blue_border_top"
            app:menu="@menu/bottom_navigation_menu">
        </android.support.design.widget.BottomNavigationView>

    </RelativeLayout>

    <include layout="@layout/error"/>

</android.support.design.widget.CoordinatorLayout>
